@inject NavigationManager Navigation
@inject AuthService AuthService
<div class="header">
    <div class="header__inner">
        <div class="header-search">
            <input type="text" class="header-search__field" placeholder="Поиск..."/>
            <img src="/icons/search.svg" alt="Поиск" class="header-search__icon" />
        </div>
        <div class="header-utility">
            <div class="header-utility__reader">
                <MudTooltip Text="Уведомления" >
                    <img src="/icons/notification.svg" id="header-utility__reader_notification" alt="Уведомления для вашего аккаунта" />
                </MudTooltip>
                <MudTooltip Text="Письма от пользователей">
                    <img src="/icons/email.svg" id="header-utility__reader_email" alt="Письма для вашего аккаунта" />
                </MudTooltip>

            </div>
            <span class="vertical-red-line"></span>
            <div class="header-utility__writer" @onclick="Logout">
                <MudTooltip Text="Письма от пользователей">
                    <MudAvatar Color="Color.Info" Variant="Variant.Filled">
                        <MudIcon Color="Color.Secondary" Icon="@Icons.Material.Filled.Favorite" Size="Size.Large"  />
                    </MudAvatar>
                </MudTooltip>
            </div>
        </div>

    </div>
</div>

@code {

    private async Task Logout()
    {
        await AuthService.RemoveTokenAsync();
        Navigation.NavigateTo("/authorize/login",true);
    }
}
