@page "/"
@attribute [Authorize]
<PageTitle>Домашняя страница</PageTitle>
<SectionContent SectionName="SupstringSection">
    Стартовая страница
</SectionContent>

@code{

    [CascadingParameter(Name = "MainLayout")]
    public LayoutBase? Layout { get; set; }

    protected override void OnInitialized()
    {
        if(Layout is not null)
            Layout.Links = new List<BreadcrumbItem>
            {
                new BreadcrumbItem("Домашняя страница", href: "/", disabled: true),
            };

    }
}